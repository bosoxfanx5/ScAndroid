<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!--tools:context="edu.byui.cs246.scandroid.MainActivity"-->


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <TextView android:text=""
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txtContent"/>



      <com.google.android.gms.samples.vision.face.multitracker.ui.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:layout_centerInParent="true">

      <com.google.android.gms.samples.vision.face.multitracker.ui.camera.GraphicOverlay
          android:id="@+id/faceOverlay"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

    </com.google.android.gms.samples.vision.face.multitracker.ui.camera.CameraSourcePreview>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:translationX="12dp"
        android:translationY="12dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="433dp"
            android:layout_below="@+id/txtContent"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"
            android:background="@android:color/holo_red_light"
            android:alpha=".8"
            android:cursorVisible="false"
            android:clickable="false"
            android:editable="false"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:layout_weight="0.91" />
    </LinearLayout>

    <!--android:layout_width="match_parent"-->
<!--android:layout_height="193dp"-->
<!--android:orientation="vertical"-->
<!--android:weightSum="1">-->



<!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/imgview" />-->

</RelativeLayout>

<GridLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="bottom|start"
android:layout_weight="1.11">


<android.support.design.widget.FloatingActionButton
    android:id="@+id/fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|start"
    android:layout_margin="16dp"
    app:srcCompat="@android:drawable/ic_dialog_info"
    app:backgroundTint="?attr/actionMenuTextColor"
    android:onClick="activateSettings(MainActivity)"
    />

<Button
    android:text="0"
    android:layout_width="80px"
    android:layout_height="80px"
    android:id="@+id/allButton"
    android:layout_gravity="center|start"
    android:background="@android:drawable/editbox_dropdown_light_frame"
    style="@style/Widget.AppCompat.Button" />

<Button
    android:text="0"
    android:layout_width="80px"
    android:layout_height="80px"
    android:id="@+id/listButton"
    android:layout_gravity="center|start"
    android:background="@android:drawable/editbox_dropdown_light_frame"
    style="@style/Widget.AppCompat.Button" />

<Button
    android:layout_width="80px"
    android:layout_height="80px"
    android:text="0"
    android:id="@+id/singleButton"
    android:layout_gravity="center|start"
    android:background="@android:drawable/editbox_dropdown_light_frame"
    style="@style/Widget.AppCompat.Button" />


</GridLayout>

    </android.support.design.widget.CoordinatorLayout>